# Backend Configuration
PORT=5000

# MongoDB Atlas Connection
# IMPORTANT: Replace with your actual MongoDB URI
# Do NOT commit your real MongoDB URI to version control
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/?appName=AppName
DB_NAME=eduflow

# Frontend Origins (comma-separated)
# Allowed domains that can make requests to this API
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# Environment
NODE_ENV=development

# Google Gemini API (for AI Chat)
# Get your API key from: https://makersuite.google.com/app/apikey
# IMPORTANT: This is a backend secret, never expose to frontend
GEMINI_API_KEY=your_gemini_api_key_here

# Frontend Configuration
VITE_API_URL=http://localhost:5000/api
VITE_ADMIN_PASSWORD=admin123
